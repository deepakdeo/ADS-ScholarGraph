FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY pyproject.toml README.md /app/
COPY src /app/src

RUN python -m pip install --upgrade pip \
    && pip install -e .

EXPOSE 8000

CMD ["uvicorn", "ads_scholargraph.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
