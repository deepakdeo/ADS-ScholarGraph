FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY pyproject.toml README.md /app/
COPY src /app/src

RUN python -m pip install --upgrade pip \
    && pip install -e .

EXPOSE 8501

CMD ["streamlit", "run", "src/ads_scholargraph/ui/app.py", "--server.address", "0.0.0.0", "--server.port", "8501"]
